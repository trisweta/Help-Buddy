{
    "name": "Help Buddy",
    "version": "0.0.1",
    "manifest_version": 2,
    "background": {
      "scripts": ["index.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": "logo.png"
    },
    "icons": {
      "128": "logo.png"
    },
    "permissions": [
      "http://*/*",
      "https://*/*"
    ]
  }
  